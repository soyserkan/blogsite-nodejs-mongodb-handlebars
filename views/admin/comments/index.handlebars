<h1>Yorumlar</h1>

<table class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Yorum Sahibi</th>
            <th>Zaman</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        {{#each getComments}}
        <tr>
            <td>{{id}}</td>
            <td>{{user.name}} {{user.surname}}</td>
            <td>{{generateTime date 'MMMM Do YYYY'}}</td>
            <td><a href="/admin/comments/delete/{{id}}" class="btn btn-danger">Sil</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>