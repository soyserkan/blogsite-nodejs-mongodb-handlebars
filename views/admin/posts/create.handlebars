<h1>Blog Yazısı Ekle</h1>

{{#each errors}}
<div class="alert alert-danger">
    {{message}}
</div>
{{/each}}


<form action="/admin/posts/create" method="POST" enctype="multipart/form-data">

    <div class="form-group">
        <label for="title">Başlık</label>
        <input name="title" type="text" class="form-control" id="title" placeholder="Başlık Giriniz">
    </div>

    <div class="form-group">
        <label for="file">Fotoğraf Yükle</label>
        <input name="file" type="file" class="form-control" id="file">
    </div>


    <div class="form-group">
        <label for="category">Kategori</label>
        <select name="category" class="form-control" id="category">
            {{#each categoryData}}
            <option value="{{id}}">{{name}}</option>
           {{/each}}
        </select>
    </div>

    <div class="form-group">
        <label for="title">Durum</label>
        <select name="status" class="form-control" id="status">
            <option value="public">Yayına Al</option>
            <option value="private">Bana Özel</option>
            <option value="draft">Taslak</option>
        </select>
    </div>

    <div class="form-check">
        <label for="allowComments" class="form-check-label">
            <input name="allowComments" type="checkbox" class="form-check-input" id="allowComments">
            Yorumlara İzin Ver
        </label>
    </div>

    <div class="form-group">
        <label for="body">Metin</label>
        <textarea name="body" cols="30" rows="10" type="text" class="form-control" id="body"
            placeholder="Blog Yazısı"></textarea>
    </div>

    <button type="submit" name="submit" class="btn btn-primary">Onayla</button>


</form>