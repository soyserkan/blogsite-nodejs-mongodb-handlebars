<!DOCTYPE html>
<html>

<head>
    <title>Üye Ol</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>

    <!-- Custom Theme files -->
    <link href="/css/login.css" rel="stylesheet" type="text/css" media="all" />
    <link href="/css/font-awesome.min.css" rel="stylesheet" type="text/css" media="all" />
    <!-- //Custom Theme files -->

    <!-- web font -->
    <link href="//fonts.googleapis.com/css?family=Hind:300,400,500,600,700" rel="stylesheet">
    <!-- //web font -->

</head>

<body>
    {{> home/form-messages}}
    <!-- main -->
    <div class="w3layouts-main">
        <div class="bg-layer">
            <h1>ÜYE OL</h1>
            <div class="header-main">
                <div class="main-icon">
                    <span class="fa fa-eercast"></span>
                </div>
                <div class="header-left-bottom">
                    <form method="POST" action="/register">
                        <div class="icon1">
                            <span class="fa fa-user"></span>
                            <input value="{{name}}" name="name" type="text" placeholder="Adı" required />
                        </div>
                        <div class="icon1">
                            <span class="fa fa-user"></span>
                             <input value="{{surname}}" name="surname" type="text" placeholder="Soyadı" required />
                        </div>
                        <div class="icon1">
                            <span class="fa fa-envelope"></span>
                            <input value="{{email}}" name="email" type="email" placeholder="E-Mail Adresi" required />
                        </div>
                        <div class="icon1">
                            <span class="fa fa-lock"></span>
                            <input name="password" type="password" placeholder="Şifre" required />
                        </div>
                        <div class="icon1">
                            <span class="fa fa-lock"></span>
                             <input name="confirmPassword" type="password" placeholder="Şifre Tekrar" required />
                        </div>
                        {{!-- <div class="login-check">
              <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i> Keep me logged
                in</label>
            </div> --}}
                        <div class="bottom">
                            <button class="btn" type="submit">ÜYE OL</button>
                        </div>
                        <div class="links">
                            <p><a href="#">ŞİFRENİ Mİ UNUTTUN?</a></p>
                            <p class="right"><a href="/login">Zaten üye misin?</a></p>
                            <div class="clear"></div>
                        </div>
                    </form>
                </div>
            </div>


        </div>
    </div>
    <!-- //main -->

</body>

</html>