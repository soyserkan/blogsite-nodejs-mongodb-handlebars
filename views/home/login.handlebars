<!DOCTYPE html>
<html>

<head>
  <title>Giriş Yap</title>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <script>
    addEventListener("load", function () {
      setTimeout(hideURLbar, 0);
    }, false);

    function hideURLbar() {
      window.scrollTo(0, 1);
    }
  </script>

  <!-- Custom Theme files -->
  <link href="/css/login.css" rel="stylesheet" type="text/css" media="all" />
  <link href="/css/font-awesome.min.css" rel="stylesheet" type="text/css" media="all" />
  <!-- //Custom Theme files -->

  <!-- web font -->
  <link href="//fonts.googleapis.com/css?family=Hind:300,400,500,600,700" rel="stylesheet">
  <!-- //web font -->

</head>

<body>
  {{> home/form-messages}}
  <!-- main -->
  <div class="w3layouts-main">
    <div class="bg-layer">
      <h1>GİRİŞ YAP</h1>
      <div class="header-main">
        <div class="main-icon">
          <span class="fa fa-eercast"></span>
        </div>
        <div class="header-left-bottom">
          <form action="/login" method="POST">
            <div class="icon1">
              <span class="fa fa-envelope"></span>
              <input name="email" type="email" placeholder="Email Adresi" required="" />
            </div>
            <div class="icon1">
              <span class="fa fa-lock"></span>
              <input name="password" type="password" placeholder="Şifre" required="" />
            </div>
            {{!-- <div class="login-check">
              <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i> Keep me logged
                in</label>
            </div> --}}
            <div class="bottom">
              <button class="btn">GİRİŞ YAP</button>
            </div>
            <div class="links">
              <p><a href="#">ŞİFRENİ Mİ UNUTTUN?</a></p>
              <p class="right"><a href="/register">Üye Ol</a></p>
              <div class="clear"></div>
            </div>
          </form>
        </div>
        <div class="social">
          <ul>
            <li>giriş yap  : </li>
            <li><a href="#" class="facebook"><span class="fa fa-facebook"></span></a></li>
            <li><a href="#" class="twitter"><span class="fa fa-twitter"></span></a></li>
            <li><a href="#" class="google"><span class="fa fa-google-plus"></span></a></li>
          </ul>
        </div>
      </div>

 
    </div>
  </div>
  <!-- //main -->

</body>

</html>